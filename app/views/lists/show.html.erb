<h1><%= @list.name %></h1>

<% if @list.tasks.any? %>

  <h3>Here are your tasks:</h3>

<ul>
  <% @list.tasks.each do |task| %>
    <li>
      <%= task.description %> |
      <%= link_to "Edit", edit_list_task_path(@list, task) %> |
      <%= link_to "Delete", list_task_path(@list, task),
                              :data => {:confirm => "Are you sure?",
                                        :method => "delete"} %>
    </li>
    <% end %>
</ul>
<% else %>
  <p>
    There are no tasks yet!
  </p>
<% end %>

  <%= link_to "Create Task", new_list_task_path(@list) %>
<p>
  <%= link_to 'Return to lists', lists_path %>
</p>
<p>
  <%= link_to "Edit", edit_list_path(@list) %>
</p>
<p>
  <%= link_to "Delete", list_path(@list),
                        :data => {:confirm => "Are you sure?",
                                  :method => 'delete'} %> </p>
